<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_slidingmenu_left"
    tools:context=".ui.activity.MainActivity">

    <RelativeLayout
        android:id="@+id/ll_left"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true">

        <FrameLayout
            android:id="@+id/fl_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ll_right"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <FrameLayout
            android:id="@+id/fl_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ac0000"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/longbutton_normal"
                android:padding="5dp"
                android:src="@mipmap/btn_1"/>

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/ic_title_home_default"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="资讯"
                android:textColor="#eeeeee"
                android:textSize="30sp"/>

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_title_share_default"/>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_title"/>
    </RelativeLayout>

</RelativeLayout>
